#! /bin/bash

###########################################################
# build soloii docker image for centos, with required packages

#--------------------------------------------------------------------
# usage function
#

function usage() {
    echo
    echo "Create docker image for soloii"
    echo "Usage:"
    echo "  $scriptName [options below]"
    echo "  -h   :  help"
}

scriptName=$(basename $0)

# Parse command line options.
while getopts h OPT; do
    case "$OPT" in
        h)
            usage
            exit 0
            ;;
        \?)
            # getopts issues an error message
            echo "Problems with command line usage"
            usage
            exit 1
            ;;
    esac
done

echo "Running $scriptName"
echo "  creating docker image for soloii"
echo "    os_type: centos"
echo "    os_version: latest"

# go to scripts dir

cd ~/git/lrose-bootstrap/docker/soloii

# compute Dockerfile path

DockerfilePath=Dockerfile.centos.soloii
echo "  Dockerfile path: " $DockerfilePath

# remove old image if present

tag=build.lrose-soloii/centos:latest
docker image rm -f ${tag}

# make build script available to container

scriptsDir=~/git/lrose-bootstrap/docker/soloii

# create the image

docker build \
    -v ${scriptsDir}:/scripts \
    --tag ${tag} \
    --file ${DockerfilePath} .

